<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_default_margin"
    android:layout_marginStart="@dimen/small_default_margin"
    android:layout_marginEnd="@dimen/small_default_margin"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_default_margin">
        <ImageView
            android:id="@+id/history_img"
            android:layout_width="40dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/nachal" />

        <TextView
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/history_img"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/small_default_margin"
            android:layout_marginEnd="@dimen/small_default_margin"
            tools:text="@string/release_date" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/history_img"
            app:layout_constraintTop_toBottomOf="@+id/history_date"
            android:layout_marginTop="@dimen/small_default_margin"
            android:layout_marginStart="@dimen/small_default_margin"
            android:layout_marginEnd="@dimen/small_default_margin"
            tools:text="@string/movie" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>